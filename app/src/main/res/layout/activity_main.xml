<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/edit_stats_button"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:text="Change"
        android:textSize="16dp"
        android:bottomRightRadius="45dp"
        android:bottomLeftRadius="45dp"
        android:topLeftRadius="45dp"
        android:topRightRadius="45dp"
        android:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="8dp"
        android:text="Protein"
        android:textColor="@color/dark"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/protein_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Fats"
        android:textColor="@color/dark"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fats_value"
        app:layout_constraintStart_toEndOf="@+id/protein" />

    <TextView
        android:id="@+id/carbohydrates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="Carbs"
        android:textColor="@color/dark"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/carbs_value"
        app:layout_constraintStart_toEndOf="@+id/fats" />

    <TextView
        android:id="@+id/protein_value"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fats_value"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/protein_value" />

    <TextView
        android:id="@+id/carbs_value"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fats_value" />

    <Button
        android:id="@+id/button_atlas"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="@color/red"
        android:bottomLeftRadius="45dp"
        android:bottomRightRadius="45dp"
        android:text="Exercise base"
        android:textSize="17dp"
        android:topLeftRadius="45dp"
        android:topRightRadius="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button_training"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="@color/red"
        android:bottomLeftRadius="45dp"
        android:bottomRightRadius="45dp"
        android:text="Strength training basics"
        android:textSize="17dp"
        android:topLeftRadius="45dp"
        android:topRightRadius="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_weight" />

    <Button
        android:id="@+id/button_diet"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="@color/red"
        android:bottomLeftRadius="45dp"
        android:bottomRightRadius="45dp"
        android:text="Nutrition basics"
        android:textSize="17dp"
        android:topLeftRadius="45dp"
        android:topRightRadius="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_training" />

    <Button
        android:id="@+id/button_weight"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="@color/red"
        android:bottomLeftRadius="45dp"
        android:bottomRightRadius="45dp"
        android:text="Weight journal"
        android:textSize="17dp"
        android:topLeftRadius="45dp"
        android:topRightRadius="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_atlas" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="8dp"
        android:text="Calories"
        android:textColor="@color/dark"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/kcal_value"
        app:layout_constraintStart_toEndOf="@+id/carbohydrates" />

    <TextView
        android:id="@+id/kcal_value"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="@color/dark"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carbs_value" />

</androidx.constraintlayout.widget.ConstraintLayout>